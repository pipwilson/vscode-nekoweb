{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "ES2022",
		"esModuleInterop": true,
		"lib": [
			"ES2022"
		],
		"baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
			"@src/*": ["src/*"]
        },
		"sourceMap": true,
		"rootDir": "src",
		"skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
	}
}
